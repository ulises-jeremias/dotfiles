#!/usr/bin/env bash

ROOT=$(dirname "$0")
SCRIPT_NAME=$(basename "$0")

for bin_path in "${ROOT}"/*; do
  bin=$(basename "${bin_path}")
  if [[ "${bin}" == "${SCRIPT_NAME}" ]]; then
    continue
  fi

  chmod +x "${bin_path}"
  sudo rm -rf ~/bin/"${bin}" >/dev/null 2>&1
  ln -sf "${bin_path}" ~/bin/"${bin}"
done
