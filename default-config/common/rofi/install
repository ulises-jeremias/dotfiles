#!/usr/bin/env bash

ROOT=$(dirname "$0")

printf "Setting up rofi themes...\\n"

rm -rf "${ROOT}"/rofi-themes-collection
git clone https://github.com/lr-tech/rofi-themes-collection.git "${ROOT}"/rofi-themes-collection
sudo rm -rf ~/.config/rofi/themes >/dev/null 2>&1
sudo rm -rf ~/.config/rofi/config.rasi >/dev/null 2>&1
mkdir -p ~/.config/rofi
ln -sf "${ROOT}"/rofi-themes-collection/themes ~/.config/rofi/themes
ln -sf "${ROOT}"/config.rasi ~/.config/rofi/config.rasi
