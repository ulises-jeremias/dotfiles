#!/usr/bin/env bash

ROOT=$(dirname "$0")

SOURCE_DIR=$(realpath "${ROOT}")
XDG_CONFIG_HOME="${XDG_CONFIG_HOME:-"${HOME}"/.config}"

printf "Setting up alacritty themes...\\n"

rm -rf "${SOURCE_DIR}"/alacritty-theme
git clone https://github.com/eendroroy/alacritty-theme "${SOURCE_DIR}"/alacritty-theme
rm -rf "${XDG_CONFIG_HOME}"/alacritty/themes >/dev/null 2>&1
mkdir -p "${XDG_CONFIG_HOME}"/alacritty
ln -sf "${SOURCE_DIR}"/alacritty-theme/themes "${XDG_CONFIG_HOME}"/alacritty/themes
