#!/usr/bin/env bash

ROOT=$(dirname $0)

pkgs=(
    # tools
    dbus-python
    drun
    graphicsmagick
    network-manager-applet
    picom
    # apps
    dunst
    feh
    i3lock-fancy
    jgmenu
    jq
    mintlocale
    networkmanager-dmenu
    polybar
    pulseaudio
    rofi
    skippy-xd
    termite
    xfce4-goodies
    zsh
    # config
    zsh-syntax-highlighting
    numix-circle-icon-theme
    wmctrl
    # fonts
    noto-fonts
    noto-fonts-extra
    terminus-font
    ttf-anonymous-pro
    ttf-dejavu
    ttf-fira-code
    ttf-liberation
    ttf-linux-libertine
)
pkgs=$(printf ",%s" "${pkgs[@]}")
pkgs=${pkgs:1}

$ROOT/scripts/install "$@" --pkgs $pkgs
