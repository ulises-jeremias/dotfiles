#!/usr/bin/env bash

ROOT=$(dirname $0)

pkgs=(
    termite
    polybar
    rofi
    dbus-python
    pulseaudio
    mintlocale
    picom
    zsh
    zsh-syntax-highlighting
    networkmanager-dmenu
    jgmenu
    numix-circle-icon-theme
    skippy-xd
    wmctrl
    graphicsmagick
    feh
)
pkgs=$(printf ",%s" "${pkgs[@]}")
pkgs=${pkgs:1}

$ROOT/scripts/install "$@" --pkgs $pkgs
