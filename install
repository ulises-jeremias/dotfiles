#!/usr/bin/env bash

ROOT=$(dirname $0)

pkgs=(
    # apps
    dunst
    feh
    i3lock-fancy
    jgmenu
    jq
    networkmanager-dmenu
    polybar
    pulseaudio
    rofi
    skippy-xd
    termite
    zsh
    # config
    zsh-syntax-highlighting
    numix-circle-icon-theme
    wmctrl
    # fonts
    noto-fonts
    noto-fonts-extra
    terminus-font
    ttf-anonymous-pro
    ttf-dejavu
    ttf-fira-code
    ttf-liberation
    ttf-linux-libertine
    # tools
    dbus-python
    drun
    graphicsmagick
    network-manager-applet
    picom
    # utils
    xfce4-about
    xfce4-display-settings
    xfce4-mime-settings
    xfce4-popup-applicationsmenu
    xfce4-power-manager-settings
    xfce4-accessibility-settings
    xfce4-find-cursor
    xfce4-mouse-settings
    xfce4-popup-directorymenu
    xfce4-settings-editor
    xfce4-appearance-settings
    xfce4-keyboard-settings
    xfce4-panel
    xfce4-popup-windowmenu
    xfce4-settings-manager
    xfce4-color-settings
    xfce4-kiosk-query
    xfce4-pm-helper
    xfce4-power-manager
)
pkgs=$(printf ",%s" "${pkgs[@]}")
pkgs=${pkgs:1}

$ROOT/scripts/install "$@" --pkgs $pkgs
