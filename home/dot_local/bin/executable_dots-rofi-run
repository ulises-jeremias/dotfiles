#!/usr/bin/env bash
# Legacy wrapper kept for backward compatibility.
# Delegates to dots-launcher or specific newer wrappers.
set -euo pipefail

script="${1:-}"
case "$script" in
  -c | --clipboard)
    exec "$HOME/.local/bin/dots-clipboard"
    ;;
  -r | --run | "")
    exec "$HOME/.local/bin/dots-launcher"
    ;;
  *)
    echo "This legacy script only supports --run / --clipboard now. Use newer wrappers." >&2
    exit 2
    ;;
esac
