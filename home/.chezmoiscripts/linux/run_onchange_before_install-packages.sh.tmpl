{{ if eq .osid "linux-arch" -}}
#!/usr/bin/env bash

set -eufo pipefail

{{ $packages := list
  "bat"
  "btop"
  "dbus-python"
  "direnv"
  "exa"
  "jq"
  "fastfetch"
  "pacman-contrib"
  "python"
  "python-pip"
  "python-pipx"
  "shellcheck"
-}}

{{ $aurPackages := list
  "cava"
-}}

{{ if and (not .ephemeral) (not .headless) -}}
{{ $packages = concat $packages (list
  "arandr"
  "flameshot"
  "graphicsmagick"
  "orchis-theme"
  "pamixer"
  "playerctl"
  "pipewire-pulse"
  "sxiv"
  "w3m"
  "wmctrl"
  "yad"
) -}}

{{ $aurPackages = concat $aurPackages (list
  "betterlockscreen"
  "cursor-bin"
  "numix-circle-icon-theme-git"
  "pamac-aur"
  "pwvucontrol"
  "visual-studio-code-bin"
  "skippy-xd"
) -}}
{{ end -}}

{{ $sudo := "sudo " -}}
{{ if eq .chezmoi.username "root" -}}
{{   $sudo = "" -}}
{{ end -}}

{{ $sudo }}pacman -S --noconfirm --needed {{ $packages | join " " }}

yay -S --noconfirm --needed {{ $aurPackages | join " " }}

{{ end -}}
