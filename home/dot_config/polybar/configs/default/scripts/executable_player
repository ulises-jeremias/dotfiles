#!/usr/bin/env bash

## Copyright (C) 2019-2025 Ulises Jeremias Cornejo Fandos
## Licensed under MIT.
##
## Check full documentation at: https://github.com/ulises-jeremias/dotfiles/wiki
##
##     @script.name [SCRIPT_NAME] [OPTION] ARGUMENTS...
##
## Options:
##     -h, --help                            Show this help message.
##         --title                           Show the title of the current song.
##

source ~/.local/lib/dots/easy-options/easyoptions.sh || exit

player_status=$(playerctl status 2>/dev/null)

# Early return if status is not Playing or Paused
if [ "${player_status}" != "Playing" ] && [ "${player_status}" != "Paused" ]; then
  echo ""
  exit 0
fi

# Get theme-adaptive colors from smart colors or fallback to xrdb
if [[ -n "${SMART_COLOR_ACCENT:-}" ]]; then
    accent_color="${SMART_COLOR_ACCENT}"
else
    accent_color="$(xrdb -get "color13")"
fi

if [[ -n "${SMART_COLOR_WARNING:-}" ]]; then
    playing_color="${SMART_COLOR_WARNING}"
else
    playing_color="$(xrdb -get "color11")"
fi

if [[ -n "${SMART_COLOR_SUCCESS:-}" ]]; then
    paused_color="${SMART_COLOR_SUCCESS}"
else
    paused_color="$(xrdb -get "color10")"
fi

if [[ -n "${title}" ]]; then
  current_song="$(playerctl metadata -s --format '{{trunc(title, 30)}}' | awk 'NR==1 {print; exit}')"
  echo "%{T1}%{F${accent_color}}${current_song}%{F}%{T-}"
  exit 0
fi

status_label=""
if [ "${player_status}" = "Playing" ]; then
  status_label="%{F${playing_color}}󰏥%{F}"
elif [ "${player_status}" = "Paused" ]; then
  status_label="%{F${paused_color}}󰐌%{F}"
fi

# Set the labels for the buttons
prev_label="%{T4}%{A1:playerctl prev:}%{F${accent_color}}󰒮%{F}%{A}%{T-}"
play_pause_label="%{T5}%{A1:playerctl play-pause:}${status_label}%{A}%{T-}"
next_label="%{T4}%{A1:playerctl next:}%{F${accent_color}}󰒭%{F}%{A}%{T-}"

echo "${prev_label} ${play_pause_label} ${next_label}"
