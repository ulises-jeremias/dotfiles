# ============================================================================
# Hyprpaper Configuration
# ============================================================================
#
# Wallpaper daemon for Hyprland
# This file is dynamically updated by dots-hyprpaper-set
# ============================================================================

# Wallpaper preloading and setting is handled by IPC
# via dots-hyprpaper-set script

# Enable IPC for dynamic wallpaper updates
ipc = on

# Disable splash screen for cleaner startup
splash = false

# Initial wallpaper will be set by dots-hyprpaper-set on startup
# Hyprpaper 0.8+ uses wallpaper blocks instead of preload/wallpaper lines
{{ if stat (joinPath .chezmoi.homeDir ".config/wpg/.current") -}}
wallpaper {
    monitor =
    path = {{ joinPath .chezmoi.homeDir ".config/wpg/.current" }}
    fit_mode = cover
}
{{ else if stat (joinPath .chezmoi.homeDir ".cache/wal/wal") -}}
wallpaper {
    monitor =
    path = {{ joinPath .chezmoi.homeDir ".cache/wal/wal" }}
    fit_mode = cover
}
{{ else -}}
# No wallpaper configured yet - will be set by dots-hyprpaper-set
{{ end -}}
