/*****----- Configuration -----*****/
configuration {
    show-icons:                 false;
    font:                       "Hack Nerd Font Mono 14";
}

/*****----- Global Properties -----*****/
@import                          "colors.rasi"

/*
USE_BUTTONS=YES
*/

/*****----- Main Window -----*****/
window {
    /* properties for window widget */
    transparency:                "real";
    location:                    center;
    anchor:                      center;
    fullscreen:                  false;
    width:                       600px;
    x-offset:                    0px;
    y-offset:                    0px;
    margin:                      0px;
    padding:                     0px;
    border:                      0px solid;
    border-radius:               20px;
    border-color:                @selected-normal-foreground;
    cursor:                      "default";
    background-color:            @background;
}

/*****----- Main Box -----*****/
mainbox {
    enabled:                     true;
    spacing:                     20px;
    margin:                      0px;
    padding:                     40px;
    background-color:            transparent;
    children:                    [ "inputbar", "message", "listview" ];
}

/*****----- Inputbar -----*****/
inputbar {
    enabled:                     true;
    spacing:                     10px;
    padding:                     0px;
    border:                      0px;
    border-radius:               12px;
    border-color:                @selected-normal-foreground;
    background-color:            transparent;
    text-color:                  @foreground;
    children:                    [ "textbox-prompt-colon", "prompt", "entry" ];
}

dummy {
    background-color:            transparent;
}

textbox-prompt-colon {
    enabled:                     true;
    expand:                      false;
    str:                         "ó°£‡";
    padding:                     16px;
    border-radius:               16px;
    vertical-align:              0.5;
    background-color:            @urgent-background;
    text-color:                  @selected-normal-foreground;
}
prompt {
    enabled:                     true;
    padding:                     16px;
    border-radius:               16px;
    vertical-align:              0.5;
    background-color:            @urgent-background;
    text-color:                  @selected-normal-foreground;
}
entry {
    enabled:                     true;
    padding:                     16px;
    border-radius:               16px;
    vertical-align:              0.5;
    background-color:            @selected-normal-background;
    text-color:                  @selected-normal-foreground;
}

/*****----- Message -----*****/
message {
    enabled:                     true;
    margin:                      0px;
    padding:                     10px;
    border:                      0px solid;
    border-radius:               12px;
    border-color:                @selected-normal-foreground;
    background-color:            @alternate-normal-background;
    text-color:                  @foreground;
}
textbox {
    background-color:            inherit;
    text-color:                  inherit;
    horizontal-align:            0.5;
}

/*****----- Listview -----*****/
listview {
    enabled:                     true;
    columns:                     1;
    lines:                       5;
    cycle:                       true;
    scrollbar:                   false;
    layout:                      vertical;

    spacing:                     15px;
    background-color:            transparent;
    cursor:                      "default";
}

/*****----- Elements -----*****/
element {
    enabled:                     true;
    padding:                     24px 20px;
    border:                      0px solid;
    border-radius:               16px;
    border-color:                @selected-normal-foreground;
    background-color:            transparent;
    text-color:                  @foreground;
    cursor:                      pointer;
}
element-text {
    font:                        "Hack Nerd Font Mono 10";
    background-color:            transparent;
    text-color:                  inherit;
    cursor:                      inherit;
}
element normal.normal,
element alternate.normal {
    background-color:            @alternate-normal-background;
    text-color:                  @foreground;
}
element normal.urgent,
element alternate.urgent,
element selected.active {
    background-color:            @urgent-background;
    text-color:                  @background;
}
element normal.active,
element alternate.active,
element selected.urgent {
    background-color:            @selected-active-background;
    text-color:                  @background;
}
element selected.normal {
    background-color:            @selected-active-background;
    text-color:                  @selected-active-foreground;
}
