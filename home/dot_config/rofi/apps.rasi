configuration {
    font            : "Hack Nerd Font Mono 10";
    show-icons      : true;
}

@import "colors.rasi"

* {
    background: transparent;
}

#window {
    transparency:                "real";
    location:                    center;
    anchor:                      center;
    fullscreen:                  true;
    x-offset:                    0px;
    y-offset:                    0px;

    enabled:                     true;
    margin:                      0px;
    padding:                     76 136;
    border:                      0px solid;
    border-radius:               0px;
    cursor:                      "default";
    background-color:            @background;
}
#mainbox {
    background-color    : @alternate-normal-background;
    padding:             40 60;
    border-radius:       24;
}
#inputbar {
    background-color    : @alternate-normal-background;
    border-color        : @selected-normal-foreground;
    border              : 2;
    border-radius       : 24;
    padding             : 16px;
    margin              : 7% 28%;
    font                : "Hack Nerd Font Mono 12";
}
#textbox-prompt-colon {
    str: "";
}
#prompt {
    enabled             : false;
}
#entry {
    font                : inherit;
    background-color    : transparent;
    placeholder         : "Search...";
    placeholder-color   : @foreground;
}
#case-indicator {
    font                : inherit;
    background-color    : transparent;
}
#message {
    padding             : 0;
    border              : 2 0 0;
}

#textbox {
    padding             : 8 24;
    background-color    : inherit;
}
#listview {
    enabled:                     true;
    columns:                     7;
    lines:                       4;
    cycle:                       true;
    dynamic:                     true;
    scrollbar:                   false;
    layout:                      vertical;
    reverse:                     false;
    fixed-height:                true;
    fixed-columns:               true;

    spacing:                     40;
    margin:                      32px;
    padding:                     0px;
    border:                      0px solid;
    border-radius:               0px;
    background-color:            transparent;
    cursor:                      "default";
}
#element {
    orientation         : vertical;
    padding             : 12 28;
    background-color    : @background;
    border-radius       : 20;
}
#element.normal {
    background-color    : @background;
}
#element.selected.normal {
    background-color    : @selected-active-background;
}
#element-icon {
    size                : 5em;
    margin              : 0 16 8 0;
    background-color    : transparent;
}
#element-text {
    background-color    : transparent;
    text-color          : @alternate-active-foreground;
}
