{
  "layer": "top",
  "position": "top",
  "height": 38,
  "spacing": 0,
  "margin-top": 0,
  "margin-left": 0,
  "margin-right": 0,
  "margin-bottom": 0,

  "modules-left": [
    "custom/palm",
    "hyprland/workspaces"
  ],

  "modules-center": [
    "clock"
  ],

  "modules-right": [
    "group/tools",
    "pulseaudio",
    "battery",
    "custom/sun",
    "tray"
  ],

  "group/tools": {
    "orientation": "horizontal",
    "drawer": {
      "transition-duration": 300,
      "transition-left-to-right": false
    },
    "modules": [
      "custom/tools-header",
      "custom/tools-screenshot",
      "custom/tools-clipboard",
      "custom/tools-rice"
    ]
  },

  "custom/tools-header": {
    "format": "‚å®",
    "tooltip": true,
    "tooltip-format": "T O O L S"
  },

  "custom/tools-screenshot": {
    "format": "üì∑",
    "tooltip": true,
    "tooltip-format": "Screenshot",
    "on-click": "~/.local/bin/dots-screenshooter --rofi"
  },

  "custom/tools-clipboard": {
    "format": "üìã",
    "tooltip": true,
    "tooltip-format": "Clipboard",
    "on-click": "~/.local/bin/dots-clipboard"
  },

  "custom/tools-rice": {
    "format": "üé®",
    "tooltip": true,
    "tooltip-format": "Rice Selector",
    "on-click": "~/.local/bin/dots-rofi-rice-selector"
  },

  "custom/palm": {
    "format": "üå¥",
    "tooltip": true,
    "tooltip-format": "V A P O R W A V E",
    "on-click": "dots-launcher"
  },

  "custom/sun": {
    "format": "‚òÄ",
    "tooltip": true,
    "tooltip-format": "A E S T H E T I C"
  },

  "hyprland/workspaces": {
    "format": "{icon}",
    "format-icons": {
      "1": "‚Ö†",
      "2": "‚Ö°",
      "3": "‚Ö¢",
      "4": "‚Ö£",
      "5": "‚Ö§",
      "default": "‚óã"
    },
    "on-click": "activate",
    "persistent-workspaces": {
      "*": 5
    }
  },

  "clock": {
    "interval": 1,
    "format": "‚ñå{:%H:%M:%S}‚ñê",
    "format-alt": "‚ñå{:%m/%d/%y}‚ñê",
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode": "year",
      "mode-mon-col": 3,
      "format": {
        "months": "<span color='#ff71ce'><b>{}</b></span>",
        "days": "<span color='#01cdfe'><b>{}</b></span>",
        "weeks": "<span color='#05ffa1'><b>W{}</b></span>",
        "weekdays": "<span color='#b967ff'><b>{}</b></span>",
        "today": "<span color='#ff71ce'><b><u>{}</u></b></span>"
      }
    }
  },

  "pulseaudio": {
    "format": "‚ô™ {volume}",
    "format-muted": "‚ô™ √ó",
    "scroll-step": 1,
    "on-click": "pamixer -t",
    "on-click-right": "pavucontrol",
    "tooltip-format": "Volume: {volume}%"
  },

  "battery": {
    "interval": 30,
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "‚ö°{capacity}",
    "format-charging": "‚ö°{capacity}‚Üë",
    "format-plugged": "‚ö°{capacity}‚óè",
    "tooltip-format": "Battery: {capacity}%"
  },

  "tray": {
    "icon-size": 18,
    "spacing": 10,
    "show-passive-items": true
  }
}

