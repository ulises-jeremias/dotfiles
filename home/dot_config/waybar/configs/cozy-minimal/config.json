{
  "layer": "top",
  "position": "top",
  "height": 34,
  "spacing": 0,
  "margin-top": 8,
  "margin-left": 10,
  "margin-right": 10,
  "margin-bottom": 0,

  "modules-left": [
    "custom/launcher",
    "hyprland/workspaces"
  ],

  "modules-center": [
    "clock"
  ],

  "modules-right": [
    "group/tools",
    "pulseaudio",
    "battery",
    "tray"
  ],

  "custom/launcher": {
    "format": "󰣇",
    "tooltip": true,
    "tooltip-format": "Menu",
    "on-click": "dots-jgmenu"
  },

  "group/tools": {
    "orientation": "horizontal",
    "drawer": {
      "transition-duration": 300,
      "transition-left-to-right": false
    },
    "modules": [
      "custom/tools-header",
      "custom/tools-screenshot",
      "custom/tools-clipboard",
      "custom/tools-rice"
    ]
  },

  "custom/tools-header": {
    "format": "󰆍",
    "tooltip": true,
    "tooltip-format": "Tools"
  },

  "custom/tools-screenshot": {
    "format": "󰹑",
    "tooltip": true,
    "tooltip-format": "Screenshot",
    "on-click": "~/.local/bin/dots-screenshooter --rofi"
  },

  "custom/tools-clipboard": {
    "format": "󰅍",
    "tooltip": true,
    "tooltip-format": "Clipboard",
    "on-click": "~/.local/bin/dots-clipboard"
  },

  "custom/tools-rice": {
    "format": "󰟪",
    "tooltip": true,
    "tooltip-format": "Rice Selector",
    "on-click": "~/.local/bin/dots-rofi-rice-selector"
  },

  "hyprland/workspaces": {
    "format": "{icon}",
    "format-icons": {
      "1": "󰮯",
      "2": "󰮯",
      "3": "󰮯",
      "4": "󰮯",
      "5": "󰮯",
      "default": "󰊠"
    },
    "on-click": "activate",
    "persistent-workspaces": {
      "*": 5
    }
  },

  "clock": {
    "interval": 60,
    "format": "󰂐 {:%H:%M}",
    "format-alt": "󰃭 {:%a, %b %d}",
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode": "year",
      "mode-mon-col": 3,
      "weeks-pos": "right",
      "format": {
        "months": "<span color='#f5c2e7'><b>{}</b></span>",
        "days": "<span color='#cba6f7'><b>{}</b></span>",
        "weeks": "<span color='#a6e3a1'><b>W{}</b></span>",
        "weekdays": "<span color='#f9e2af'><b>{}</b></span>",
        "today": "<span color='#f5c2e7'><b><u>{}</u></b></span>"
      }
    }
  },

  "pulseaudio": {
    "format": "{icon}",
    "format-muted": "󰝟",
    "format-icons": {
      "default": ["󰕿", "󰖀", "󰕾"]
    },
    "scroll-step": 1,
    "on-click": "pamixer -t",
    "on-click-right": "pavucontrol",
    "tooltip-format": "Volume: {volume}%"
  },

  "battery": {
    "interval": 30,
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "{icon}",
    "format-charging": "󰂄",
    "format-plugged": "󰚥",
    "format-icons": ["󰂎", "󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"],
    "tooltip-format": "Battery: {capacity}%"
  },

  "tray": {
    "icon-size": 16,
    "spacing": 8,
    "show-passive-items": true
  }
}

