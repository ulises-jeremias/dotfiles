  "group/audio": {
    "orientation": "vertical",
    "drawer": {
      "transition-duration": 300,
      "transition-left-to-right": false
    },
    "modules": [
      "custom/audio-header",
      "pulseaudio#microphone",
      "pulseaudio/slider",
      "pulseaudio"
    ]
  },

  "group/backlight": {
    "orientation": "vertical",
    "drawer": {
      "transition-duration": 300,
      "transition-left-to-right": false
    },
    "modules": [
      "custom/backlight-header",
      "backlight/slider",
      "backlight"
    ]
  },

  "pulseaudio": {
    "format": "{icon}",
    "format-muted": "ó°Ÿ",
    "format-icons": {
      "headphone": "ó°‹‹",
      "hands-free": "ó°¥°",
      "headset": "ó°‹",
      "phone": "ó°„œ",
      "portable": "ó°¦¢",
      "car": "ó°„‹",
      "default": ["ó°•¿", "ó°–€", "ó°•¾"]
    },
    "scroll-step": 1,
    "on-click": "pamixer -t",
    "on-click-right": "pavucontrol",
    "tooltip-format": "{desc}\nVolume: {volume}%"
  },

  "pulseaudio/slider": {
    "min": 0,
    "max": 100,
    "orientation": "vertical"
  },

  "backlight": {
    "device": "intel_backlight",
    "format": "{icon}",
    "format-icons": ["ó°ƒš", "ó°ƒ›", "ó°ƒœ", "ó°ƒ", "ó°ƒ", "ó°ƒŸ", "ó°ƒ "],
    "on-scroll-up": "brightnessctl set 5%+",
    "on-scroll-down": "brightnessctl set 5%-",
    "tooltip-format": "Brightness: {percent}%"
  },

  "backlight/slider": {
    "min": 0,
    "max": 100,
    "orientation": "vertical",
    "device": "intel_backlight"
  },

  "pulseaudio#microphone": {
    "format": "{format_source}",
    "format-source": "ó°¬",
    "format-source-muted": "ó°­",
    "on-click": "pamixer --default-source -t",
    "on-scroll-up": "pamixer --default-source -i 5",
    "on-scroll-down": "pamixer --default-source -d 5",
    "tooltip-format": "Microphone: {volume}%"
  },

  "group/system-controls": {
    "orientation": "vertical",
    "drawer": {
      "transition-duration": 300,
      "transition-left-to-right": false
    },
    "modules": [
      "custom/system-controls-header",
      "battery",
      "custom/night-mode",
      "custom/performance-profile"
    ]
  },

  "group/system-monitors": {
    "orientation": "vertical",
    "drawer": {
      "transition-duration": 300,
      "transition-left-to-right": false
    },
    "modules": [
      "custom/system-monitors-header",
      "disk",
      "cpu",
      "memory",
      "temperature"
    ]
  },

  "custom/night-mode": {
    "format": "{}",
    "exec": "~/.local/bin/dots night-mode status-icon",
    "interval": 5,
    "tooltip": true,
    "exec-tooltip": "~/.local/bin/dots night-mode status-text",
    "on-click": "~/.local/bin/dots night-mode toggle"
  },

  "custom/performance-profile": {
    "format": "{}",
    "exec": "~/.config/waybar/scripts/performance-profile",
    "interval": 10,
    "tooltip": true,
    "tooltip-format": "Performance profile (click to change)",
    "on-click": "~/.local/bin/dots-performance-mode --gui"
  },

  "battery": {
    "interval": 30,
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "{icon}",
    "format-charging": "ó°‚„",
    "format-plugged": "ó°š¥",
    "format-icons": ["ó°‚", "ó°º", "ó°»", "ó°¼", "ó°½", "ó°¾", "ó°¿", "ó°‚€", "ó°‚", "ó°‚‚", "ó°¹"],
    "tooltip-format": "Battery: {capacity}%\n{timeTo}",
    "on-click": "kitty --class=floating -e btop"
  },

  "custom/weather": {
    "format": "{}",
    "exec": "~/.config/waybar/scripts/weather",
    "interval": 1800,
    "tooltip": true,
    "rotate": 90
  },

  "custom/separator": {
    "format": "â€”",
    "tooltip": false
  },

  "custom/audio-header": {
    "format": "ó°š",
    "tooltip": true,
    "tooltip-format": "Audio Controls\nClick to expand/collapse"
  },

  "custom/backlight-header": {
    "format": "ó°ƒŸ",
    "tooltip": true,
    "tooltip-format": "Brightness Controls\nClick to expand/collapse"
  },

  "custom/system-controls-header": {
    "format": "ó°’“",
    "tooltip": true,
    "tooltip-format": "System Controls\nClick to expand/collapse"
  },

  "custom/system-monitors-header": {
    "format": "ó°›",
    "tooltip": true,
    "tooltip-format": "System Monitors\nClick to expand/collapse"
  },

  "clock": {
    "interval": 60,
    "format": "{:%H\n%M}",
    "format-alt": "{:%m\n%d}",
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode": "year",
      "mode-mon-col": 3,
      "weeks-pos": "right",
      "on-scroll": 1,
      "format": {
        "months": "<span color='#ffead3'><b>{}</b></span>",
        "days": "<span color='#ecc6d9'><b>{}</b></span>",
        "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
        "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
        "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
      }
    },
    "actions": {
      "on-click-right": "mode",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down"
    }
  },

  "disk": {
    "interval": 30,
    "format": "ó°‹Š",
    "path": "/",
    "tooltip-format": "Disk Usage\nUsed: {used} / {total}\nFree: {free} ({percentage_free}%)",
    "states": {
      "warning": 70,
      "critical": 85
    },
    "on-click": "kitty --class=floating -e btop"
  },

  "cpu": {
    "interval": 5,
    "format": "ó°˜š",
    "states": {
      "warning": 70,
      "critical": 90
    },
    "tooltip-format": "CPU Usage: {usage}%\nFrequency: {avg_frequency}GHz",
    "on-click": "kitty --class=floating -e btop"
  },

  "memory": {
    "interval": 5,
    "format": "ó°›",
    "tooltip-format": "RAM: {used:0.1f}GB / {total:0.1f}GB\nSwap: {swapUsed:0.1f}GB / {swapTotal:0.1f}GB",
    "on-click": "kitty --class=floating -e btop"
  },

  "temperature": {
    "interval": 5,
    "thermal-zone": 0,
    "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
    "critical-threshold": 80,
    "format": "{icon}",
    "format-icons": ["ó°”", "ó°”", "ó°¸"],
    "tooltip-format": "Temperature: {temperatureC}Â°C",
    "on-click": "kitty --class=floating -e btop"
  },

