{
  "layer": "top",
  "position": "top",
  "height": 36,
  "spacing": 0,
  "margin-top": 6,
  "margin-left": 8,
  "margin-right": 8,
  "margin-bottom": 0,

  "modules-left": [
    "custom/jgmenu",
    "group/quick-apps",
    "group/system-apps",
    "group/power-actions",
    "hyprland/window",
    "pulseaudio#microphone",
    "group/volume",
    "group/brightness"
  ],

  "group/quick-apps": {
    "orientation": "horizontal",
    "drawer": {
      "transition-duration": 300,
      "transition-left-to-right": true
    },
    "modules": [
      "custom/quick-apps-header",
      "custom/apps-web",
      "custom/apps-terminal",
      "custom/apps-files"
    ]
  },

  "custom/quick-apps-header": {
    "format": "󰘳",
    "tooltip": true,
    "tooltip-format": "Quick Apps\nClick to expand/collapse"
  },

  "group/system-apps": {
    "orientation": "horizontal",
    "drawer": {
      "transition-duration": 300,
      "transition-left-to-right": true
    },
    "modules": [
      "custom/system-apps-header",
      "custom/apps-system",
      "custom/apps-audio"
    ]
  },

  "custom/system-apps-header": {
    "format": "󰒓",
    "tooltip": true,
    "tooltip-format": "System Apps\nClick to expand/collapse"
  },

  "group/power-actions": {
    "orientation": "horizontal",
    "drawer": {
      "transition-duration": 300,
      "transition-left-to-right": true
    },
    "modules": [
      "custom/power-actions-header",
      "custom/apps-lock",
      "custom/apps-reboot",
      "custom/apps-shutdown"
    ]
  },

  "custom/power-actions-header": {
    "format": "󰐥",
    "tooltip": true,
    "tooltip-format": "Power Actions\nClick to expand/collapse"
  },

  "custom/apps-web": {
    "format": "󰈹",
    "tooltip": true,
    "tooltip-format": "Open Web Browser",
    "on-click": "exo-open --launch WebBrowser"
  },

  "custom/apps-terminal": {
    "format": "󰞷",
    "tooltip": true,
    "tooltip-format": "Open Terminal",
    "on-click": "exo-open --launch TerminalEmulator"
  },

  "custom/apps-files": {
    "format": "󰉋",
    "tooltip": true,
    "tooltip-format": "Open File Manager",
    "on-click": "exo-open --launch FileManager"
  },

  "custom/apps-system": {
    "format": "󰍺",
    "tooltip": true,
    "tooltip-format": "Display Settings",
    "on-click": "~/.local/bin/dots-settings-gui --category display"
  },

  "custom/apps-audio": {
    "format": "󰕾",
    "tooltip": true,
    "tooltip-format": "Audio Settings (Pavucontrol)",
    "on-click": "pavucontrol"
  },

  "custom/apps-lock": {
    "format": "󰌾",
    "tooltip": true,
    "tooltip-format": "Lock Screen",
    "on-click": "~/.config/hypr/scripts/lock.sh"
  },

  "custom/apps-reboot": {
    "format": "󰜉",
    "tooltip": true,
    "tooltip-format": "Reboot System",
    "on-click": "systemctl reboot"
  },

  "custom/apps-shutdown": {
    "format": "󰐥",
    "tooltip": true,
    "tooltip-format": "Shutdown System",
    "on-click": "systemctl poweroff"
  },

  "custom/separator-dot": {
    "format": "•",
    "tooltip": false
  },

  "group/volume": {
    "orientation": "horizontal",
    "modules": [
      "pulseaudio",
      "pulseaudio/slider"
    ]
  },

  "group/brightness": {
    "orientation": "horizontal",
    "modules": [
      "backlight",
      "backlight/slider"
    ]
  },

  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-muted": "󰝟 Muted",
    "format-icons": {
      "headphone": "󰋋",
      "hands-free": "󰥰",
      "headset": "󰋎",
      "phone": "󰄜",
      "portable": "󰦢",
      "car": "󰄋",
      "default": ["󰕿", "󰖀", "󰕾"]
    },
    "scroll-step": 1,
    "on-click": "pamixer -t",
    "on-click-right": "pavucontrol",
    "tooltip-format": "{desc}\nVolume: {volume}%"
  },

  "backlight": {
    "device": "intel_backlight",
    "format": "{icon} {percent}%",
    "format-icons": ["󰃚", "󰃛", "󰃜", "󰃝", "󰃞", "󰃟", "󰃠"],
    "on-scroll-up": "brightnessctl set 5%+",
    "on-scroll-down": "brightnessctl set 5%-",
    "tooltip-format": "Brightness: {percent}%\nDevice: intel_backlight"
  },

  "modules-center": [
    "clock",
    "custom/weather"
  ],

  "modules-right": [
    "battery",
    "custom/night-mode",
    "custom/performance-profile",
    "custom/github",
    "tray"
  ],

  "custom/jgmenu": {
    "format": "󰣇",
    "tooltip": true,
    "tooltip-format": "Open Jgmenu",
    "on-click": "dots-jgmenu",
    "on-right-click": "exo-open ~/.config/jgmenu/jgmenurc"
  },

  "custom/apps": {
    "format": "󰘖",
    "tooltip": false,
    "on-click": "dots-launcher"
  },

  "custom/window-switch": {
    "format": "󰖯",
    "tooltip": false,
    "on-click": "rofi -show window -theme ~/.config/rofi/applets.rasi"
  },

  "custom/rices": {
    "format": "󰟪",
    "tooltip": false,
    "on-click": "~/.local/bin/dots rice selector"
  },

  "custom/night-mode": {
    "format": "{}",
    "exec": "~/.local/bin/dots night-mode status-icon",
    "interval": 5,
    "tooltip": true,
    "exec-tooltip": "~/.local/bin/dots night-mode status-text",
    "on-click": "~/.local/bin/dots night-mode toggle"
  },

  "custom/github": {
    "format": "󰊤 {}",
    "exec": "~/.config/waybar/scripts/github",
    "interval": 300,
    "tooltip": true,
    "tooltip-format": "Open GitHub Notifications",
    "on-click": "xdg-open https://github.com/notifications"
  },

  "custom/performance-profile": {
    "format": "{}",
    "exec": "~/.config/waybar/scripts/performance-profile",
    "interval": 10,
    "tooltip": true,
    "tooltip-format": "Performance profile (click to change)",
    "on-click": "~/.local/bin/dots-performance-mode --gui"
  },

  "battery": {
    "interval": 30,
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "{icon} {capacity}%",
    "format-charging": "󰂄 {capacity}%",
    "format-plugged": "󰚥 {capacity}%",
    "format-icons": ["󰂎", "󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"],
    "tooltip-format": "Battery: {capacity}%\n{timeTo}",
    "on-click": "kitty --class=floating -e btop"
  },

  "custom/weather": {
    "format": "{}",
    "exec": "~/.config/waybar/scripts/weather",
    "interval": 1800,
    "tooltip": true,
    "exec-tooltip": "~/.config/waybar/scripts/weather --tooltip"
  },

  "custom/separator": {
    "format": "|",
    "tooltip": false
  },

  "custom/dots-separator": {
    "format": "•",
    "tooltip": false
  },

  "pulseaudio#microphone": {
    "format": "{format_source}",
    "format-source": "󰍬 {volume}%",
    "format-source-muted": "󰍭 Muted",
    "on-click": "pamixer --default-source -t",
    "on-scroll-up": "pamixer --default-source -i 5",
    "on-scroll-down": "pamixer --default-source -d 5",
    "tooltip-format": "{source_desc}\nVolume: {volume}%"
  },

  "pulseaudio/slider": {
    "min": 0,
    "max": 100,
    "orientation": "horizontal"
  },

  "backlight/slider": {
    "min": 0,
    "max": 100,
    "orientation": "horizontal",
    "device": "intel_backlight"
  },

  "clock": {
    "interval": 1,
    "format": " {:%I:%M %p}",
    "format-alt": "󰧒 {:%Y-%m-%d %a}",
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode": "year",
      "mode-mon-col": 3,
      "weeks-pos": "right",
      "on-scroll": 1,
      "format": {
        "months": "<span color='#ffead3'><b>{}</b></span>",
        "days": "<span color='#ecc6d9'><b>{}</b></span>",
        "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
        "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
        "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
      }
    },
    "actions": {
      "on-click-right": "mode",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down"
    }
  },

  "tray": {
    "icon-size": 18,
    "spacing": 12,
    "show-passive-items": true,
    "tooltip": true
  },

  "hyprland/window": {
    "format": "",
    "separate-outputs": false,
    "rewrite": {
      "": ""
    },
    "tooltip": true,
    "tooltip-format": "Active Window: {title}"
  }
}
