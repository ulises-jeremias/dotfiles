{
  "layer": "top",
  "position": "bottom",
  "output": "!",
  "height": 30,
  "spacing": 0,

  "modules-left": [
    "hyprland/workspaces"
  ],

  "modules-center": [
    "custom/player-controls",
    "custom/player-info"
  ],

  "modules-right": [
    "hyprland/language",
    "custom/separator",
    "disk",
    "memory",
    "cpu",
    "temperature"
  ],

  "hyprland/workspaces": {
    "format": "{icon}",
    "format-icons": {
      "1": "Û∞ù¶",
      "2": "Û∞ù¶",
      "3": "Û∞ù¶",
      "4": "Û∞ù¶",
      "5": "Û∞ù¶",
      "6": "Û∞ù¶",
      "7": "Û∞ù¶",
      "8": "Û∞ù¶",
      "9": "Û∞ù¶",
      "10": "Û∞ù¶",
      "active": "Û∞ÆØ",
      "default": "Û∞ßû"
    },
    "on-scroll-up": "hyprctl dispatch workspace e+1",
    "on-scroll-down": "hyprctl dispatch workspace e-1",
    "on-click": "activate",
    "persistent-workspaces": {
      "*": 10
    },
    "all-outputs": false,
    "show-special": false
  },

  "mpris": {
    "format": "{player_icon} {dynamic}",
    "format-paused": "{status_icon} <i>{dynamic}</i>",
    "dynamic-order": ["title", "artist"],
    "dynamic-len": 40,
    "player-icons": {
      "default": "‚ñ∂",
      "mpv": "üéµ",
      "spotify": ""
    },
    "status-icons": {
      "paused": "‚è∏"
    },
    "ignored-players": ["firefox"]
  },

  "custom/player-controls": {
    "format": "Û∞íÆ {} Û∞í≠",
    "exec": "~/.config/waybar/scripts/player-status",
    "interval": 2,
    "on-click": "playerctl play-pause",
    "on-click-right": "playerctl next",
    "on-click-middle": "playerctl previous",
    "tooltip": false
  },

  "custom/player-info": {
    "format": "{}",
    "exec": "~/.config/waybar/scripts/player-info",
    "interval": 2,
    "tooltip": false,
    "max-length": 45
  },

  "custom/playing": {
    "format": "{}",
    "exec": "~/.config/waybar/scripts/player-status",
    "interval": 2,
    "tooltip": false
  },

  "hyprland/language": {
    "format": "Û∞åå {}",
    "format-en": "EN",
    "format-es": "ES",
    "tooltip-format": "Keyboard layout: {long}"
  },

  "disk": {
    "interval": 30,
    "format": "Û∞ãä {percentage_used}%",
    "path": "/",
    "tooltip-format": "Disk Usage\nUsed: {used} / {total}\nFree: {free} ({percentage_free}%)",
    "states": {
      "warning": 70,
      "critical": 85
    }
  },

  "memory": {
    "interval": 5,
    "format": "Û∞çõ {percentage_used}%",
    "tooltip-format": "RAM: {used:0.1f}GB / {total:0.1f}GB\nSwap: {swapUsed:0.1f}GB / {swapTotal:0.1f}GB",
    "states": {
      "warning": 70,
      "critical": 90
    }
  },

  "cpu": {
    "interval": 2,
    "format": "Û∞òö {usage}%",
    "tooltip-format": "CPU Usage: {usage}%\nFrequency: {avg_frequency}GHz",
    "states": {
      "warning": 70,
      "critical": 90
    }
  },

  "temperature": {
    "interval": 5,
    "thermal-zone": 0,
    "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
    "critical-threshold": 80,
    "format": "{icon} {temperatureC}¬∞C",
    "format-icons": ["Û∞îè", "Û∞îè", "Û∞∏Å"],
    "tooltip-format": "Temperature: {temperatureC}¬∞C"
  },

  "custom/separator": {
    "format": "|",
    "tooltip": false
  },

  "custom/dots-separator": {
    "format": "‚Ä¢",
    "tooltip": false
  }
}
