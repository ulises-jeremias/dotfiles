    "format-gb": "GB",
    "format-de": "DE",
    "format-fr": "FR",
    "format-latam": "LATAM",
    "on-click": "~/.local/bin/dots-keyboard-layout menu",
    "tooltip": true,
    "tooltip-format": "Keyboard: {long}\nClick to change layout"
  },

  "disk": {
    "interval": 30,
    "format": "Û∞ãä {percentage_used}%",
    "path": "/",
    "tooltip-format": "Disk Usage\nUsed: {used} / {total}\nFree: {free} ({percentage_free}%)",
    "states": {
      "warning": 70,
      "critical": 85
    }
  },

  "memory": {
    "interval": 5,
    "format": "Û∞çõ {percentage}%",
    "tooltip-format": "RAM: {used:0.1f}GB / {total:0.1f}GB\nSwap: {swapUsed:0.1f}GB / {swapTotal:0.1f}GB",
    "states": {
      "warning": 70,
      "critical": 90
    }
  },

