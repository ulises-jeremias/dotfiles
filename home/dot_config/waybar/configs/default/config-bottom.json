  "custom/player-controls": {
    "format": "Û∞íÆ {} Û∞í≠",
    "exec": "~/.config/waybar/scripts/player-status",
    "interval": 2,
    "on-click": "playerctl play-pause",
    "on-click-right": "playerctl next",
    "on-click-middle": "playerctl previous",
    "tooltip": false
  },

  "custom/player-info": {
    "format": "{}",
    "exec": "~/.config/waybar/scripts/player-info",
    "interval": 2,
    "tooltip": false,
    "max-length": 45
  },

  "custom/playing": {
    "format": "{}",
    "exec": "~/.config/waybar/scripts/player-status",
