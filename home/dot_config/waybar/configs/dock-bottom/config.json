{
  "layer": "top",
  "position": "bottom",
  "height": 52,
  "spacing": 0,
  "margin-top": 0,
  "margin-left": 300,
  "margin-right": 300,
  "margin-bottom": 8,

  "modules-left": [
    "custom/launcher"
  ],

  "modules-center": [
    "hyprland/workspaces",
    "custom/separator",
    "custom/apps-terminal",
    "custom/apps-files",
    "custom/apps-web",
    "custom/separator",
    "custom/tools-screenshot",
    "custom/tools-clipboard",
    "custom/tools-rice",
    "custom/separator",
    "clock"
  ],

  "modules-right": [
    "pulseaudio",
    "battery",
    "tray"
  ],

  "custom/launcher": {
    "format": "󰣇",
    "tooltip": true,
    "tooltip-format": "Applications",
    "on-click": "dots-launcher"
  },

  "hyprland/workspaces": {
    "format": "{icon}",
    "format-icons": {
      "1": "●",
      "2": "●",
      "3": "●",
      "4": "●",
      "5": "●",
      "default": "○"
    },
    "on-click": "activate",
    "persistent-workspaces": {
      "*": 5
    }
  },

  "custom/separator": {
    "format": "│",
    "tooltip": false
  },

  "custom/apps-terminal": {
    "format": "󰞷",
    "tooltip": true,
    "tooltip-format": "Terminal",
    "on-click": "exo-open --launch TerminalEmulator"
  },

  "custom/apps-files": {
    "format": "󰉋",
    "tooltip": true,
    "tooltip-format": "Files",
    "on-click": "exo-open --launch FileManager"
  },

  "custom/apps-web": {
    "format": "󰈹",
    "tooltip": true,
    "tooltip-format": "Browser",
    "on-click": "exo-open --launch WebBrowser"
  },

  "custom/tools-screenshot": {
    "format": "󰹑",
    "tooltip": true,
    "tooltip-format": "Screenshot",
    "on-click": "~/.local/bin/dots-screenshooter --rofi"
  },

  "custom/tools-clipboard": {
    "format": "󰅍",
    "tooltip": true,
    "tooltip-format": "Clipboard",
    "on-click": "~/.local/bin/dots-clipboard"
  },

  "custom/tools-rice": {
    "format": "󰟪",
    "tooltip": true,
    "tooltip-format": "Rice Selector",
    "on-click": "~/.local/bin/dots-rofi-rice-selector"
  },

  "clock": {
    "interval": 60,
    "format": "󰥔",
    "tooltip-format": "{:%H:%M\n%A, %B %d}"
  },

  "pulseaudio": {
    "format": "{icon}",
    "format-muted": "󰝟",
    "format-icons": {
      "default": ["󰕿", "󰖀", "󰕾"]
    },
    "scroll-step": 1,
    "on-click": "pamixer -t",
    "on-click-right": "pavucontrol",
    "tooltip-format": "Volume: {volume}%"
  },

  "battery": {
    "interval": 30,
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "{icon}",
    "format-charging": "󰂄",
    "format-plugged": "󰚥",
    "format-icons": ["󰂎", "󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"],
    "tooltip-format": "Battery: {capacity}%"
  },

  "tray": {
    "icon-size": 20,
    "spacing": 8,
    "show-passive-items": true
  }
}

