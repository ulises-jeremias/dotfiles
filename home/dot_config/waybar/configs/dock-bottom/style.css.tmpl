/* ============================================================================
 * Dock Bottom Waybar - macOS Style
 * ============================================================================
 * A floating dock at the bottom with glassmorphism and icon-only design
 * ============================================================================ */

@import "{{ joinPath .chezmoi.homeDir ".cache/wal/colors-waybar.css" }}";
@import "{{ joinPath .chezmoi.homeDir ".cache/dots/smart-colors/colors-waybar.css" }}";

/* ==========================================================================
 * Global
 * ========================================================================== */
* {
    border: none;
    border-radius: 0;
    font-family: "SF Pro Display", "Hack Nerd Font Mono", "Noto Color Emoji", sans-serif;
    font-size: 18px;
    font-weight: 500;
    min-height: 0;
}

/* ==========================================================================
 * Window - Glassmorphism Dock
 * ========================================================================== */
window#waybar {
    background: rgba(30, 30, 30, 0.75);
    color: @fg-primary;
    border-radius: 18px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow:
        0 8px 32px rgba(0, 0, 0, 0.3),
        inset 0 1px 0 rgba(255, 255, 255, 0.1);
}

/* ==========================================================================
 * Launcher - App Icon
 * ========================================================================== */
#custom-launcher {
    background: transparent;
    color: @smart-cyan;
    padding: 4px 14px;
    margin: 8px 4px;
    border-radius: 12px;
    font-size: 24px;
}

#custom-launcher:hover {
    background: rgba(255, 255, 255, 0.15);
}

/* ==========================================================================
 * Workspaces - Dots
 * ========================================================================== */
#workspaces {
    background: transparent;
    margin: 0 4px;
    padding: 0;
}

#workspaces button {
    background: transparent;
    color: rgba(255, 255, 255, 0.4);
    padding: 4px 8px;
    margin: 10px 2px;
    border: none;
    border-radius: 50%;
    font-size: 10px;
}

#workspaces button:hover {
    color: rgba(255, 255, 255, 0.7);
    font-size: 14px;
}

#workspaces button.active {
    color: @smart-accent;
    font-size: 14px;
}

#workspaces button.empty {
    opacity: 0.3;
}

/* ==========================================================================
 * Separator
 * ========================================================================== */
#custom-separator {
    color: rgba(255, 255, 255, 0.15);
    padding: 0 8px;
    font-size: 20px;
    font-weight: 200;
}

/* ==========================================================================
 * App Icons
 * ========================================================================== */
#custom-apps-terminal,
#custom-apps-files,
#custom-apps-web {
    background: transparent;
    padding: 4px 12px;
    margin: 8px 2px;
    border-radius: 12px;
    font-size: 22px;
}

#custom-apps-terminal {
    color: @smart-green;
}

#custom-apps-files {
    color: @smart-yellow;
}

#custom-apps-web {
    color: @smart-cyan;
}

#custom-apps-terminal:hover,
#custom-apps-files:hover,
#custom-apps-web:hover {
    background: rgba(255, 255, 255, 0.15);
    font-size: 26px;
}

/* ==========================================================================
 * Clock - Icon Only
 * ========================================================================== */
#clock {
    background: transparent;
    color: @smart-pink;
    padding: 4px 12px;
    margin: 8px 4px;
    border-radius: 12px;
    font-size: 20px;
}

#clock:hover {
    background: rgba(255, 255, 255, 0.15);
}

/* ==========================================================================
 * System Icons
 * ========================================================================== */
#pulseaudio,
#battery {
    background: transparent;
    padding: 4px 12px;
    margin: 8px 2px;
    border-radius: 12px;
    font-size: 20px;
}

#pulseaudio {
    color: @smart-orange;
}

#battery {
    color: @smart-green;
}

#pulseaudio:hover,
#battery:hover {
    background: rgba(255, 255, 255, 0.15);
}

#pulseaudio.muted {
    color: @smart-warning;
    opacity: 0.6;
}

#battery.charging {
    color: @smart-cyan;
}

#battery.warning:not(.charging) {
    color: @smart-warning;
}

#battery.critical:not(.charging) {
    color: @smart-error;
}

/* ==========================================================================
 * Tray
 * ========================================================================== */
#tray {
    background: transparent;
    padding: 4px 10px;
    margin: 8px 10px 8px 4px;
    border-radius: 12px;
}

#tray > .passive {
    -gtk-icon-effect: dim;
}

#tray > .needs-attention {
    -gtk-icon-effect: highlight;
}
