/* ============================================================================
 * Floating Neon Waybar - Cyberpunk Style
 * ============================================================================
 * A sleek floating island bar with neon glow effects for cyberpunk aesthetics
 * ============================================================================ */

@import "{{ joinPath .chezmoi.homeDir ".cache/wal/colors-waybar.css" }}";
@import "{{ joinPath .chezmoi.homeDir ".cache/dots/smart-colors/colors-waybar.css" }}";

/* ==========================================================================
 * Neon Color Definitions
 * ========================================================================== */
@define-color neon-pink #ff00ff;
@define-color neon-cyan #00ffff;
@define-color neon-purple #9d00ff;
@define-color neon-blue #00b4ff;
@define-color neon-dark #0a0a0f;
@define-color neon-glow rgba(255, 0, 255, 0.4);

/* ==========================================================================
 * Global
 * ========================================================================== */
* {
    border: none;
    border-radius: 0;
    font-family: "JetBrains Mono Nerd Font", "Noto Color Emoji", monospace;
    font-size: 14px;
    font-weight: bold;
    min-height: 0;
}

/* ==========================================================================
 * Window - Floating Island Effect
 * ========================================================================== */
window#waybar {
    background: linear-gradient(135deg,
        rgba(10, 10, 15, 0.95) 0%,
        rgba(20, 10, 30, 0.95) 50%,
        rgba(10, 10, 15, 0.95) 100%);
    color: @neon-cyan;
    border-radius: 20px;
    border: 2px solid @neon-pink;
    box-shadow:
        0 0 20px @neon-glow,
        0 0 40px rgba(0, 255, 255, 0.2),
        inset 0 0 20px rgba(255, 0, 255, 0.1);
}

/* ==========================================================================
 * Workspaces - Neon Dots
 * ========================================================================== */
#workspaces {
    background: transparent;
    margin: 0 8px;
    padding: 0;
}

#workspaces button {
    background: transparent;
    color: @neon-cyan;
    padding: 4px 12px;
    margin: 6px 3px;
    border: 1px solid transparent;
    border-radius: 12px;
    font-size: 16px;

    text-shadow: 0 0 8px @neon-cyan;
}

#workspaces button:hover {
    background: rgba(0, 255, 255, 0.15);
    border-color: @neon-cyan;
    box-shadow: 0 0 15px rgba(0, 255, 255, 0.5);
}

#workspaces button.active {
    background: linear-gradient(135deg,
        rgba(255, 0, 255, 0.3) 0%,
        rgba(157, 0, 255, 0.3) 100%);
    color: @neon-pink;
    border: 2px solid @neon-pink;
    box-shadow:
        0 0 20px @neon-glow,
        inset 0 0 10px rgba(255, 0, 255, 0.2);
    text-shadow: 0 0 12px @neon-pink;
}

#workspaces button.empty {
    opacity: 0.3;
    color: @neon-purple;
}

#workspaces button.urgent {
    background: rgba(255, 0, 100, 0.4);
    color: #ff0064;
    border-color: #ff0064;
}

/* ==========================================================================
 * Clock - Neon Display
 * ========================================================================== */
#clock {
    background: linear-gradient(90deg,
        rgba(255, 0, 255, 0.1) 0%,
        rgba(0, 255, 255, 0.1) 100%);
    color: @neon-cyan;
    padding: 4px 20px;
    margin: 6px 4px;
    border: 1px solid rgba(0, 255, 255, 0.4);
    border-radius: 15px;
    font-size: 15px;
    font-weight: bold;
    letter-spacing: 2px;
    text-shadow: 0 0 10px @neon-cyan;
}

#clock:hover {
    background: rgba(0, 255, 255, 0.2);
    border-color: @neon-cyan;
    box-shadow: 0 0 20px rgba(0, 255, 255, 0.4);
}

/* ==========================================================================
 * Audio - Neon Icon
 * ========================================================================== */
#pulseaudio {
    background: transparent;
    color: @neon-pink;
    padding: 4px 14px;
    margin: 6px 3px;
    border: 1px solid transparent;
    border-radius: 12px;
    font-size: 18px;
    text-shadow: 0 0 8px @neon-pink;

}

#pulseaudio:hover {
    background: rgba(255, 0, 255, 0.15);
    border-color: @neon-pink;
    box-shadow: 0 0 15px @neon-glow;
}

#pulseaudio.muted {
    color: @neon-purple;
    opacity: 0.5;
}

/* ==========================================================================
 * Battery - Neon Status
 * ========================================================================== */
#battery {
    background: transparent;
    color: @neon-cyan;
    padding: 4px 14px;
    margin: 6px 3px;
    border: 1px solid transparent;
    border-radius: 12px;
    font-size: 18px;
    text-shadow: 0 0 8px @neon-cyan;

}

#battery:hover {
    background: rgba(0, 255, 255, 0.15);
    border-color: @neon-cyan;
    box-shadow: 0 0 15px rgba(0, 255, 255, 0.5);
}

#battery.charging {
    color: #00ff88;
    text-shadow: 0 0 8px #00ff88;
}

#battery.warning:not(.charging) {
    color: #ffaa00;
    text-shadow: 0 0 8px #ffaa00;
}

#battery.critical:not(.charging) {
    color: #ff0064;
    text-shadow: 0 0 10px #ff0064;
}

/* ==========================================================================
 * Tray - Subtle Neon
 * ========================================================================== */
#tray {
    background: transparent;
    padding: 4px 10px;
    margin: 6px 8px 6px 3px;
    border-radius: 12px;
}

#tray > .passive {
    -gtk-icon-effect: dim;
}

#tray > .needs-attention {
    -gtk-icon-effect: highlight;
}
