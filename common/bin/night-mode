#!/usr/bin/env bash

[[ ! -f "${XDG_CONFIG_HOME:-"${HOME}"/.config}"/night_mode ]] && echo "NIGHT_MODE=\"enabled\"" >"${XDG_CONFIG_HOME:-"${HOME}"/.config}"/night_mode
source "${XDG_CONFIG_HOME:-"${HOME}"/.config}"/night_mode

night_mode() {
  for display in $(xrandr | grep " connected" | awk '{print $1}'); do
    xrandr --output "${display}" --gamma "$1" --brightness "$2"
  done
}

auto_run() {
  if [[ "${NIGHT_MODE}" = "disabled" ]]; then
    night_mode 1:0.85:0.6 1.0
    echo "NIGHT_MODE=\"enabled\"" >"${XDG_CONFIG_HOME:-"${HOME}"/.config}"/night_mode
  else
    night_mode 1:1:1 1.0
    echo "NIGHT_MODE=\"disabled\"" >"${XDG_CONFIG_HOME:-"${HOME}"/.config}"/night_mode
  fi
}

case $1 in
auto) auto_run ;;
off) night_mode 1:1:1 1.0 ;;
*) night_mode 1:0.85:0.6 1.0 ;;
esac
